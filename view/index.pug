doctype html
html
  head
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    title= pageTitle
    style
      :stylus(compress=true)
        html,body
          height: 100%
          padding: 0
          margin: 0
        #message
          position: fixed
          top: 0
          left: 0
          right: 0
          bottom: 0
          padding-bottom: 3em
          margin: 0
          overflow: auto
        #input
          position: fixed
          bottom: 0
          left: 0
          right: 0
          padding-right: 16px
          display: flex;
        #cmd
          flex: 1
          height: 2em
  body
    #app
      pre#message
      #input
        input#cmd(type='text' placeholder='cmd')
    script(src='/lib/jquery-3.2.0.min.js')
    script(src='/socket.js/socket.io.js')
    script(src='/app.js')
    script.
      app();